/**app.wxss**/
.container {
  padding: 20rpx;
  box-sizing: border-box;
  background-color: #ECEFF2;
} 

.searchBox {
    width: 70%;
    height: 100rpx;
    position: fixed;
    bottom: 60rpx;
    left: 50%;
    transform: translateX(-50%);
    padding: 0 50rpx;
    border-radius: 100rpx;
    background-color: white;
    box-shadow: 0rpx 30rpx 40rpx -20rpx rgba(95, 95, 95, 0.3);
    transition: bottom .2s linear;
}
.input-placeholder {
    font-size: 30rpx;
    color: #B0BFBF;
}
.loading-listCard--single {
    height: 120rpx;
    padding: 10rpx 40rpx;
}
.loadinglistCard--single:not(:last-child){
    border-bottom: 1px solid #D1D1D6;
}
.loading-listCard--single--song {
    margin-top: 25rpx;
    height: 50rpx;
    width: 70%;
    background: #f3f5f7;
}
.loading-listCard--single--subInfo {
    margin-top: 20rpx;
    height: 30rpx;
    width: 35%;
    background: #f3f5f7;
}
