/**app.wxss**/
.container {
  padding: 0 20rpx 20rpx;
  box-sizing: border-box;
  background-color: #ECEFF2;
} 
.belowSearchBoxContainer__blur {
    filter: blur(40rpx) saturate(150%);
}
.header {
    display: flex;
    margin-top: 100rpx;
    height: 140rpx;
    padding: 0 30rpx;
    transition: filter .2s linear;
    justify-content: space-between;
}
.header--chart {
    font-size: 60rpx;
    font-weight: bold;
    color: #222222;
    line-height: 140rpx;
}
.header--musicSource {
    font-size: 30rpx;
    color: #8E8E93;
    font-weight: bold;
    line-height: 140rpx;
}
.header--musicSource--single{
    position: relative;
}
.header--musicSource--single:not(:first-child) {
    margin-left: 40rpx;
}

.header--musicSource--single__active:first-child::before {
    content: '';
    position: absolute;
    height: 7rpx;
    width: auto;
    bottom: -10rpx;
    left: -4rpx;
    right: -4rpx;
    background-color: #ff5252;
}
.header--musicSource--single__active:nth-child(2):before {
    content: '';
    position: absolute;
    height: 7rpx;
    width: auto;
    bottom: -10rpx;
    left: -4rpx;
    right: -4rpx;
    background-color: #00bfa5;
}

.header--musicSource--single__active {
    color: #222222;
}
.listCard--single__loading {
    height: 120rpx;
    padding: 10rpx 40rpx;
}
.listCard--single--song__loading {
    margin-top: 20rpx;
    height: 50rpx;
    width: 70%;
    background: linear-gradient(110deg, #f3f5f7 40%, #fff 50%, #f3f5f7 70%);
    background-size: 300% 100%;
    animation: loadingBackground .8s ease-in-out infinite;
}
.listCard--single--subInfo__loading {
    margin-top: 20rpx;
    height: 30rpx;
    width: 35%;
    background: linear-gradient(110deg, #f3f5f7 40%, #fff 50%, #f3f5f7 70%);
    background-size: 300% 100%;
    animation: loadingBackground .8s ease-in-out infinite;
}
.listCard {
    min-height: 100vh;
    background-color: white;
    border-radius: 50rpx;
    padding: 20rpx;
    overflow: visible;
    transition: filter .2s linear;
}
.listCard--single {
    position: relative;
    min-height: 120rpx;
    padding: 10rpx 40rpx;
}

.listCard--single:not(:last-child){
    border-bottom: 1px solid #D1D1D6;
}

.listCard--single--song {
    margin-top: 15rpx;
    font-weight: bold;
    color: #222222;
}
.listCard--single--song--alias {
    color: #8E8E93;
    font-size: 25rpx;
}
.listCard--single--subInfo {
    font-size: 25rpx;
    margin-top: 10rpx;
    color: #8E8E93;
}
.listCard--single--artist--single, .listCard--single--album {
    display: inline-block;
}
.listCard--single--artist--single:not(:first-child) {
    margin-left: 3rpx;
}
.listCard--single--artist--single:not(:first-child)::before {
    content: '/';
    position: relative;
    left: 2rpx;
}

@keyframes loadingBackground {
    0% {
        background-position-x: 120%;
    }
    100% {
        background-position-x: 0%;
    }
}

