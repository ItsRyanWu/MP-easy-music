        <image class="albumImage" src="{{albumImageSrc}}" mode="aspectFill" lazy-load="false" binderror="" bindload=""></image>
        <text class="song" >{{song}}</text>
        <text class="singer" >{{singer}}</text>
        <text class="album" >{{album}}</text>
        <view>
            <!-- <icon class="" size="23" color="">
