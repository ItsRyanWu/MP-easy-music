<!--index.wxml-->
<view class="container">
    <view class="flexContainer" style="filter:{{containerBlur}}">
        <view class="albumImage">
            <image class="albumImage--image" src="{{nowPlaying.albumImageUrl}}" mode="aspectFill"></image>
        </view>
        <view class="musicInfo">
            <text class="musicInfo--song" >{{nowPlaying.songName}}</text>
            <view class="musicInfo--sub">
                <text class="musicInfo--sub--singer" >{{nowPlaying.artistsName}} - </text>
                <text class="musicInfo--sub--album" >{{nowPlaying.albumName}}</text>
            </view>
        </view>
        <view class="controlButton">
            <view class="controlButton--container">
                <image class="controlButton--container--backward" src="/img/backward-solid.svg" mode="aspectFit"></image>
                <image class="controlButton--container--play" src="/img/play-solid.svg" mode="aspectFit"></image>
                <image class="controlButton--container--forward" src="/img/forward-solid.svg" mode="aspectFit"></image>
            </view>
        </view>
    </view>
    <input class="searchBox" style="bottom:{{searchBarBottom}}" type="text" value="{{searchBarValue}}" placeholder="同时搜索「网易云音乐」与「QQ 音乐」" cursor-spacing="20" placeholder-class="input-placeholder" maxlength="20" confirm-type="search" 
    adjust-position="{{false}}" focus="{{isFocus}}"  bindconfirm="getSearchKeyWordAndNavigatingToSearchResult" bindtap="switchToSearchStatus" bindblur="switchToNormalStatus" bindinput="syncValueToGlobalData"></input>
</view>
