.container {
    padding-top: 0; 
}
.searchBox {
    border: 1px solid #ECEFF2;
}
.header {
    display: flex;
    height: 100rpx;
    padding: 0 30rpx;
    transition: filter .2s linear .1s;
    justify-content: space-between;
}
.header--chart {
    font-size: 45rpx;
    font-weight: bold;
    color: black;
    line-height: 100rpx;
}
.header--musicSource {
    font-size: 30rpx;
    color: #8E8E93;
    font-weight: bold;
    line-height: 100rpx;
}
.header--musicSource--single {
    position: relative;
}
.header--musicSource--single:not(:first-child) {
    margin-left: 40rpx;
}

.header--musicSource--single:first-child::before {
    content: '';
    position: absolute;
    height: 7rpx;
    width: auto;
    bottom: -10rpx;
    left: -4rpx;
    right: -4rpx;
    background-color: #ff5252;
}

.active {
    color: black;
}

.listCard {
    min-height: 100vh;
    background-color: white;
    border-radius: 50rpx;
    padding: 20rpx;
    overflow: visible;
    transition: filter .2s linear .1s;
}

.listCard--single {
    position: relative;
    min-height: 120rpx;
    padding: 10rpx 40rpx;
}

.listCard--single:not(:last-child){
    border-bottom: 1px solid #D1D1D6;
}

.listCard--single--song {
    margin-top: 15rpx;
    font-weight: bold;
}
.listCard--single--subInfo {
    font-size: 25rpx;
    margin-top: 10rpx;
    color: #8E8E93;
}
.listCard--single--artist--single, .listCard--single--album {
    display: inline-block;
}
.listCard--single--artist--single:not(:first-child) {
    margin-left: 3rpx;
}
.listCard--single--artist--single:not(:first-child)::before {
    content: '/';
    position: relative;
    left: 2rpx;
}
